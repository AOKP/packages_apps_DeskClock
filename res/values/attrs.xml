<resources>

  <!-- Attribute style for the DigitalTimerClock widget -->
  <declare-styleable name="DigitalTimerClock">
    <attr name="padding" format="dimension|reference" />
    <attr name="color" format="color|reference" />
    <attr name="size" format="dimension|reference" />
    <attr name="editable" format="boolean" />
    <attr name="autoresize" format="boolean" />
    <attr name="show_sign" format="boolean" />
    <attr name="positive_color" format="color|reference" />
    <attr name="negative_color" format="color|reference" />
    <attr name="default_value" format="integer" />
  </declare-styleable>

  <!-- Attribute style for the StopWatchPanel widget -->
  <declare-styleable name="StopWatchPanel">
    <attr name="panel_title" format="string|reference" />
  </declare-styleable>

  <!-- Attribute style for the SectorsDialogPreference widget -->
  <declare-styleable name="SectorsDialogPreference">
    <attr name="min" format="integer" />
    <attr name="max" format="integer" />
  </declare-styleable>

  <!-- Attribute style for the FragmentTitle widget -->
  <declare-styleable name="FragmentTitle">
    <attr name="icon" format="reference" />
    <attr name="title" format="string|reference" />
  </declare-styleable>

</resources>
